@model CampaignViewModel

@{
    ViewBag.Title = "Edit Campaign";
    Layout = "_Layout";
}

<h1 class="text-center">Edit Campaign</h1>

<div class="row justify-content-center">
    <div class="col-md-6">

        <!-- EDIT CAMPAIGN -->
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <input type="hidden" asp-for="CampaignId" />
            <input type="hidden" asp-for="TeacherId" />
            <div class="form-floating mb-3">
                <input asp-for="Title" class="form-control" autocomplete="on" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Title">Title</label>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Description" class="form-control" autocomplete="on" aria-required="true" placeholder="password" />
                <label asp-for="Description">Description</label>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <textarea asp-for="Content" class="form-control" autocomplete="on" placeholder="content" id="floatingTextarea2" style="height: 100px" aria-required="true"></textarea>
                <label asp-for="Content">Content</label>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            @* <div class="form-floating mb-3">
                <input asp-for="ImageUrl" class="form-control" autocomplete="on" aria-required="true" placeholder="name@example.com" />
                <label asp-for="ImageUrl">Image Url</label>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div> *@

            <div class="form-floating mb-3">
                <input asp-for="ImageUrl" class="form-control" autocomplete="on" aria-required="true" />
                <label asp-for="ImageUrl">Image Url</label>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <!-- Image Upload Field -->
            @* <div class="form-floating mb-3">
                <label for="imageUpload" class="form-label">Upload Image</label>
                <input type="file" class="form-control" id="imageUpload" name="imageFile" accept="image/*" />
            </div> *@

            <div class="form-floating mb-3">
                <select asp-for="CampaignType" class="form-control" aria-required="true" required>
                    <option selected hidden>Campaign Type</option>
                    <option value="Open">Open</option>
                    <option value="Restricted">Restricted</option>
                    <option value="PublicInformation">Public Information</option>
                    <option value="InvitationOnly">Invitation Only</option>
                </select>
                <label asp-for="CampaignType">Campaign Type</label>
            </div>
            <div class="d-grid col-6 mx-auto">
                <button class="btn btn-primary" type="submit">Update</button>
            </div>
        </form>


        <!-- DELETE CAMPAIGN -->
        <div class="d-grid col-6 mx-auto">
            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal">Delete</button>
        </div>
        <!-- Delete confirmation modal -->
        <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this campaign?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <form asp-action="Delete" asp-route-id="@Model.CampaignId" method="post">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
